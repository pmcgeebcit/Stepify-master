
@{
    ViewData["Title"] = "AdminDashboard";
}
<div class="container" style="margin-top: 30px;">
    <h1>Admin Dashboard</h1>
    <hr>
    <div class="row">
        <!-- edit form column -->
        <div class="col-md-9">
            <h3>Users</h3>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Search Users:</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <div class="input-group-btn">
                        <a class="btn btn-default" href=""><i class="glyphicon glyphicon-search"></i></a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">First name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="John">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Last name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="Doe">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="johndoe@email.com">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Username:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" value="johndoe">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <input type="button" class="btn btn-primary" value="Save Changes">
                        <span></span>
                        <input type="reset" class="btn btn-warning" value="Cancel">
                        <input type="reset" class="btn btn-danger" value="Delete">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="row">
        <!-- edit form column -->
        <div class="col-md-9">
            <h3>Courses</h3>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Search Courses:</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <div class="input-group-btn">
                        <a class="btn btn-default" href=""><i class="glyphicon glyphicon-search"></i></a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Course Title:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Course Description:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="">
                    </div>
                </div>
                <div class="form-group" style="padding-bottom:15px;">
                    <label class="col-lg-3 control-label" for="stepmedia">Upload Media</label>
                    <div class="col-lg-8">
                        <input  class="form-control" type="file" id="stepmedia">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <input type="button" class="btn btn-primary" value="Save Changes">
                        <span></span>
                        <input type="reset" class="btn btn-warning" value="Cancel">
                        <input type="reset" class="btn btn-danger" value="Delete">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>


